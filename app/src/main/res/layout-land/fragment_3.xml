<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment3_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    android:padding="16dp">

    <!-- Huvudcontainer: horisontell -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="top"
        android:weightSum="2">

        <!-- Vänster sida: API-data och back button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="top|start"
            android:spacing="12dp">

            <!-- API Weather Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/pink"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="top|start">

                    <TextView
                        android:id="@+id/tvFragment3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp"/>

                    <ImageView
                        android:id="@+id/ivWeather"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_sun"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Back button -->
            <Button
                android:id="@+id/buttonToFragment1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back to menu"
                android:textColor="@android:color/white"
                android:background="@drawable/button_custom"
                android:padding="12dp"
                android:layout_marginTop="16dp"/>
        </LinearLayout>

        <!-- Höger sida: Firestorelista med scroll -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/pink">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvFirestoreList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Firestore list..."
                        android:textSize="16sp"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>

